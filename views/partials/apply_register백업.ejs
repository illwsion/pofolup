  //파일 업로드 시 미리보기
  function setThumbnail(event, num){
    let reader = new FileReader();

    reader.onload = (event)=>{
      document.getElementById("image_container").src = event.target.result;
    };
    reader.readAsDataURL(event.target.files[0]);
  }
</script>
